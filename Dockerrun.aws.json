{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "nginx-conf",
      "host": {
        "sourcePath": "/var/app/current/nginx.conf"
      }
    },
    {
      "name": "static-volume",
      "host": {
        "sourcePath": "/var/app/current/static"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "nginx",
      "image": "nginx:latest",
      "essential": true,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "nginx-conf",
          "containerPath": "/etc/nginx/conf.d/default.conf",
          "readOnly": true
        },
        {
          "sourceVolume": "static-volume",
          "containerPath": "/usr/share/nginx/html/static",
          "readOnly": true
        }
      ],
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ]
    },
    {
      "name": "web",
      "image": "131643625257.dkr.ecr.us-east-1.amazonaws.com/tracking-ecr:latest",
      "essential": true,
      "memory": 128,
      "environment": [
        {
          "name": "PYTHONPATH",
          "value": "/app"
        }
      ],
      "portMappings": [
        {
          "hostPort": 8000,
          "containerPort": 8000
        }
      ]
    },
    {
      "name": "redis",
      "image": "redis:latest",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 6379,
          "containerPort": 6379
        }
      ]
    },
    {
      "name": "celery-worker",
      "image": "131643625257.dkr.ecr.us-east-1.amazonaws.com/tracking-ecr:latest",
      "essential": true,
      "memory": 128
    },
    {
      "name": "celery-beat",
      "image": "131643625257.dkr.ecr.us-east-1.amazonaws.com/tracking-ecr:latest",
      "essential": true,
      "memory": 128
    }
  ]
}
